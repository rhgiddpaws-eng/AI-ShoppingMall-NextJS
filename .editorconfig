# 한글이 깨지지 않도록 모든 텍스트 파일을 UTF-8로 강제합니다.
root = true

[*.{js,jsx,ts,tsx,mjs,cjs,json,css,scss,md,mdx,yml,yaml,txt}]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 2

[*.ps1]
charset = utf-8
end_of_line = crlf
insert_final_newline = true
indent_style = space
indent_size = 2
